# ============================================
# MOLTCITY / AGENTCITY - Environment Variables
# ============================================

# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Database
DB_PATH=./moltcity.db

# Auth
JWT_SECRET=your-32-char-secret-key-minimum-length-required
JWT_EXPIRES_IN=7d

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=

# ============================================
# CRYPTO / BASE LAYER
# ============================================

# Base Sepolia (testnet) - for development
# RPC_URL=https://sepolia.base.org
# CHAIN_ID=84532

# Base Mainnet - for production
RPC_URL=https://mainnet.base.org
CHAIN_ID=8453

# Treasury wallet that receives payments
PAYMENT_WALLET_ADDRESS=0xYOUR_WALLET_ADDRESS_HERE

# MOLT Token contract (optional, deploy your own)
# MOLT_TOKEN_ADDRESS=0x...

# ============================================
# Feature Flags
# ============================================

USE_NEW_AUTH=false
USE_NEW_BUILDINGS=false
USE_NEW_PARCELS=false
USE_NEW_AGENTS=false
USE_NEW_RENTALS=false
USE_NEW_PAYMENTS=true
